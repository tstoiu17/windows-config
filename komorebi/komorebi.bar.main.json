{
  "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/v0.1.33/schema.bar.json",
  "frame": {
    "inner_margin": {
      "x": 0,
      "y": 0
    }
  },
  "monitor": {
    "index": 0,
    "work_area_offset": {
      "left": 0,
      "top": 20,
      "right": 0,
      "bottom": 20
    }
  },
  "position": {
    "start": {
      "x": 0,
      "y": 0
    },
    "end": {
      "x": 1920,
      "y": 20
    }
  },
  "icon_scale": 1.1,
  "font_family": "JetBrains Mono",
  "font_size": 14,
  "theme": {
    "palette": "Base16",
    "name": "TokyoNightDark",
    "accent": "Base0D"
  },
  "transparency_alpha": 0,
  "widget_spacing": 20,
  "left_widgets": [
    {
      "Komorebi": {
        "workspaces": {
          "enable": true,
          "display": "IconAndText",
          "hide_empty_workspaces": true
        },
        "layout": {
          "enable": true
        },
        "focused_window": {
          "enable": true,
          "display": "IconAndText",
          "show_icon": true
        }
      }
    }
  ],
  "center_widgets": [],
  "right_widgets": [
    {
      "Media": {
        "enable": false
      }
    },
    {
      "Storage": {
        "enable": false
      }
    },
    {
      "Memory": {
        "enable": false
      }
    },
    {
      "Network": {
        "enable": false,
        "show_total_data_transmitted": false,
        "show_network_activity": false
      }
    },
    {
      "Date": {
        "enable": true,
        "format": "YearMonthDate"
      }
    },
    {
      "Time": {
        "enable": true,
        "format": "TwentyFourHour"
      }
    }
  ]
}
