{
  "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/v0.1.33/schema.bar.json",
  "frame": {
    "inner_margin": {
      "x": 0,
      "y": 0
    }
  },
  "monitor": {
    "index": 2,
    "work_area_offset": {
      "left": 0,
      "top": 20,
      "right": 0,
      "bottom": 20
    }
  },
  "position": {
    "start": {
      "x": -1920,
      "y": 0
    },
    "end": {
      "x": 1920,
      "y": 20
    }
  },
  "icon_scale": 1.1,
  "font_family": "JetBrains Mono",
  "font_size": 14,
  "theme": {
    "palette": "Base16",
    "name": "TokyoNightDark",
    "accent": "Base0D"
  },
  "transparency_alpha": 0,
  "widget_spacing": 20,
  "left_widgets": [
    {
      "Komorebi": {
        "workspaces": {
          "enable": true,
          "display": "IconAndText",
          "hide_empty_workspaces": true
        },
        "layout": {
          "enable": true,
          "display": "IconAndText"
        },
        "focused_window": {
          "enable": true,
          "show_icon": true
        }
      }
    }
  ],
  "right_widgets": [
    {
      "Time": {
        "enable": true,
        "format": "TwentyFourHour"
      }
    }
  ]
}
